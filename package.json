{
  "name": "@ization/repo",
  "scripts": {
    "build": "npm-run-all build:core build:{moment,temporal,translate}",
    "build:core": "ng build core --prod",
    "postbuild:core": "dts-bundle-generator -o dist/core/ization-core.d.ts dist/core/ization-core.d.ts && rimraf dist/core/public-api.d.ts dist/core/lib",
    "build:translate": "ng build translate --prod",
    "build:temporal": "ng build temporal --prod",
    "build:moment": "ng build moment --prod",
    "prebuild:demo": "npm run build:demo:translations",
    "build:demo": "ng build demo --prod",
    "build:demo:translations": "run-for-every-file --src demo/src/translations-source/ --file * --run \"messageformat -l {{file-name}} -o demo/src/translations/{{file-name}}.js {{src-file}}\"",
    "start": "ng serve demo",
    "docs": "typedoc",
    "postdocs": "cat typedoc-patch.css >> dist/docs/assets/css/main.css",
    "test": "npm-run-all test:*",
    "test:core": "ng test core --code-coverage --watch=false",
    "test:translate": "ng test translate --code-coverage --watch=false",
    "test:temporal": "ng test temporal --code-coverage --watch=false",
    "test:moment": "ng test moment --code-coverage --watch=false",
    "lint": "npm-run-all lint:*",
    "lint:core": "ng lint core",
    "lint:translate": "ng lint translate",
    "lint:temporal": "ng lint temporal",
    "lint:moment": "ng lint moment",
    "lint:demo": "ng lint demo"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.1",
    "@angular/common": "~11.2.1",
    "@angular/compiler": "~11.2.1",
    "@angular/core": "~11.2.1",
    "@angular/forms": "~11.2.1",
    "@angular/platform-browser": "~11.2.1",
    "@angular/platform-browser-dynamic": "~11.2.1",
    "@angular/router": "~11.2.1",
    "@js-temporal/polyfill": "^0.1.0",
    "@messageformat/runtime": "^3.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.1",
    "@angular/cli": "~11.2.1",
    "@angular/compiler-cli": "~11.2.1",
    "@messageformat/cli": "^3.0.1",
    "@messageformat/core": "^3.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "dts-bundle-generator": "^5.9.0",
    "jasmine-core": "~3.6.0",
    "jasmine-marbles": "^0.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "rimraf": "^3.0.2",
    "run-for-every-file": "^1.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typedoc": "^0.21.4",
    "typedoc-plugin-mermaid": "^1.3.0",
    "typescript": "~4.1.2"
  }
}
